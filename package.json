{
  "name": "api-logger-mongodb",
  "version": "1.0.0",
  "description": "A comprehensive API logging middleware for Node.js applications that logs requests and responses to MongoDB",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "example:express": "npm run build && node example/express-waf/server.js",
    "example:axios": "npm run build && node example/standalone-axios-waf/client.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "api-logger",
    "mongodb",
    "express",
    "nestjs",
    "middleware",
    "logging",
    "audit",
    "request-response",
    "typescript"
  ],
  "author": "Sayantan Roy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rick001/api-logger-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/rick001/api-logger-mongodb/issues"
  },
  "homepage": "https://github.com/rick001/api-logger-mongodb#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
